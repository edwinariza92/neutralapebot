[Unit]
Description=Trading Bot ape
After=network.target

[Service]
Type=simple
User=ubuntu
WorkingDirectory=/home/ubuntu/bots/bot3/neutralapebot
ExecStart=/usr/bin/python3 /home/ubuntu/bots/bot3/neutralapebot/apemodificado15m.py
Restart=on-failure
RestartSec=30
StandardOutput=journal
StandardError=journal
# Agregar l√≠mites de recursos para prevenir cuelgues por memoria
MemoryLimit=512M
CPUQuota=50%

[Install]
WantedBy=multi-user.target